{
    "plugins": [
      "jest",
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 5,
      "sourceType": "module"
    },
    "env": {
        "node": true
    },
    "overrides": [
      {
        "files": ["**/*.test.ts"],
        "extends": [
          "plugin:jest/all",
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier/@typescript-eslint",
          "plugin:prettier/recommended"
        ]
      }
    ],
    "rules": {
    }
}
